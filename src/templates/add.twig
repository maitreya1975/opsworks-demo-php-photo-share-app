{% include 'header.twig' %}

{%  if data %}<pre>{{ data }}</pre>{%  endif %}

<form action="{{ app.request.baseUrl ~ '/add' }}" method="post" class="form-horizontal" enctype="multipart/form-data">
  <div class="control-group">
    <label class="control-label" for="photoFile">Photo to Upload</label>
    <div class="controls">
      <input type="file" name="photoFile" id="photoFile">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="photoCaption">Caption</label>
    <div class="controls">
      <input type="text" name="photoCaption" id="photoCaption" placeholder="e.g. My cool photo!" class="input-xxlarge" maxlength="75">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary"><b class="icon-ok icon-white"></b> Add Photo</button>
      <a href="{{ app.request.baseUrl ~ '' }}" class="btn"><b class="icon-chevron-left"></b> Go Back</a>
    </div>
  </div>
</form>

{% include 'footer.twig' %}
